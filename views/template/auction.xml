<odoo>
    <template id="auction_list_template" name="Auction List Page">
        <!-- Load frontend assets -->
        <t t-call-assets="web.assets_frontend"/>
        <!-- Link custom CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"/>

        <link rel="stylesheet" type="text/css" href="/auction_management/static/src/css/auction.css"/>
        <script type="text/javascript" src="/auction_management/static/src/js/round.js"></script>

        <header>
             <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-light1">
            <a class="navbar-brand" href="/">Auction System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auction/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auction/list">Auctions</a>
                    </li>
                    <li class="nav-item2">
                        <a class="nav-link" href="/properties">Properties</a>
                    </li>
                </ul>

                <!-- Search Bar -->
                <form class="form-inline d-flex align-items-center">
                    <input type="text" name="query" placeholder="Search for Auction"
                           class="form-control custom-search mr-2"/>
                    <button type="submit" class="btn btn-primary custom-search-btn">
                        <i class="bi bi-search"></i> <!-- Bootstrap Search Icon -->
                    </button>
                </form>


                <!-- Profile Dropdown -->
                <ul class="navbar-nav ml-3">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center"
                           href="#"
                           id="profileDropdown"
                           role="button"
                           data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false">
                            <img src="/auction_management/static/src/img/user.png"
                                 alt="Profile"
                                 class="rounded-circle profile-image"/>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="/auction/login">Login</a>
                            <a class="dropdown-item" href="/auction/profile">Profile</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/auction/logout">Log out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        </header>

        <div class="home-container mt-5">
            <h2 class="text-center">Available Auctions</h2>
            <!-- Notification Section -->
            <div id="notification-container"></div>  <!-- Container for notifications -->

            <div class="row mt-4">
                <t t-foreach="auctions" t-as="auction">
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h4><t t-esc="auction.auction_name" /></h4>
                                <p>Initial Price: $<t t-esc="auction.initial_price" /></p>
                                <p>Current Bid: $<t t-esc="auction.highest_bid" /></p>
                                <p>Status: <t t-esc="auction.status" /></p>
                                <form action="/auction/bid" method="post" class="mt-3">
                                    <input type="hidden" name="auction_id" t-att-value="auction.id" />
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                    <div class="form-group">
                                        <input type="number" name="bid_amount" placeholder="Enter bid amount"
                                               class="form-control" required="required" />
                                    </div>
                                    <button type="submit" class="btn btn-primary">Place Bid</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>

        <!-- Notification Script -->
        <script type="text/javascript">
            // Check if success or error message exists in the URL
            var successMessage = "<t t-esc='request.params.get("success_message", "")'/>";
            var errorMessage = "<t t-esc='request.params.get("error", "")'/>";

            // Display success notification
            if (successMessage) {
                var notification = $('<div class="alert alert-success" role="alert">' + successMessage + '</div>');
                $('#notification-container').append(notification);
                setTimeout(function() {
                    notification.fadeOut('slow');
                }, 5000);
            }

            // Display error notification
            if (errorMessage) {
                var notification = $('<div class="alert alert-danger" role="alert">' + errorMessage + '</div>');
                $('#notification-container').append(notification);
                setTimeout(function() {
                    notification.fadeOut('slow');
                }, 5000);
            }
        </script>
    </template>
</odoo>